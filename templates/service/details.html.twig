{% extends 'base.html.twig' %}

{% block title %}Détails du service {{ service.nom }}{% endblock %}

{% block body %}

    <div class="container main-container">

        <div class="row">
            <div class="col-md-6">
                <h3>{{ entreprise.nom }} - {{ service.nom }}</h3>
            </div>
            <div class="col-md-6 text-right">
                <a href="{{ url('services', {'entreprise': entreprise.nom|replace({' ': '-'})})}}" class="btn btn-light">Retour</a>
            </div>
        </div>

        <hr>
        <h4>Informations générales</h4>
        <br/>

        <table class="table table-hover table-bordered">
            <tr>
                <th style="width:25%">Date de création</th>
                <td>{{ service.createdAt|date("d/m/Y \\à H\\hi") }}</td>
            </tr>
            <tr>
                <th style="width:25%">Date de dernière mise à jour</th>
                <td>{{ service.updatedate|date("d/m/Y \\à H\\hi") }}</td>
            </tr>
            <tr>
                <th style="width:25%">État</th>
                <td>
                    {% if service.getStatus == 'warning' %}
                        <i class="fas fa-exclamation-triangle warning"></i> Attention
                    {% elseif service.getStatus == 'danger' %}
                        <i class="fas fa-fire-alt danger"></i> Danger
                    {% else %}
                        <i class="fas fa-check okay"></i> Ok
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th style="width:25%">Description</th>
                <td></td>
            </tr>
        </table>

        <table class="table table-striped">

        </table>
    </div> <!-- /container -->

{% endblock %}